@page "/button"
@rendermode InteractiveServer

@using ScottBlazorLibrary.Buttons

<h3>Test of ScottButton</h3>

<ScottButton @ref="@DefaultButton" Text="Hello" Style="ScottButtonStyle.Default" Disabled="false" OnClickCallback="@Clicked" />

<ScottButton @ref="@CancelButton" Text="@CancelButtonText" Style="ScottButtonStyle.Cancel" Disabled="false" OnMouseDownCallback="@MouseDown" OnMouseUpCallback="@MouseUp" />

<ScottButton @ref="@DisabledDefaultButton" Text="Hello Disabled" Style="ScottButtonStyle.Default" Disabled="true" />

<ScottButton @ref="@DisabledCancelButton" Text="Cancel Disabled" Style="ScottButtonStyle.Cancel" Disabled="true" />


